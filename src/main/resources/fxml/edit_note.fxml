                <VBox.margin>
                    <Insets left="16.0" right="16.0" top="16.0" />
                </VBox.margin>
            </Label>
            <TextArea fx:id="contentTextArea" prefHeight="155.0" prefWidth="525.0" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets left="16.0" right="16.0" top="8.0" />
                </VBox.margin>
            </TextArea>
            <Label fx:id="dateOfCreationLabel">
                <VBox.margin>
                    <Insets left="16.0" right="16.0" top="8.0" />
                </VBox.margin>
            </Label>
        </VBox>
        <HBox alignment="CENTER_RIGHT" VBox.vgrow="NEVER">
            <Button fx:id="confirmButton" mnemonicParsing="false" text="positiveButton">
                <HBox.margin>
                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#cancelAction" text="Отмена">
                <HBox.margin>
                    <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                </HBox.margin>
            </Button>
        </HBox>
    </VBox>

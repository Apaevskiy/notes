                <VBox.margin>
                    <Insets left="16.0" right="16.0" top="8.0" />
                </VBox.margin>
            </Label>
            <TextField fx:id="headerTextField">
                <VBox.margin>
                    <Insets left="16.0" right="16.0" top="8.0" />
                </VBox.margin>
            </TextField>

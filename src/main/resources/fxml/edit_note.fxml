<?import org.kordamp.ikonli.javafx.*?>

<fx:root minHeight="120.0" minWidth="250.0" prefHeight="467.0" prefWidth="709.0" style="-fx-background-color: rgba(50,50,50,0.76);" type="StackPane" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <VBox maxHeight="-Infinity" maxWidth="-Infinity" style="-fx-background-color: whitesmoke;">
        <HBox alignment="CENTER_RIGHT">
            <Label fx:id="titleField" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" text="Заголовок" wrapText="true" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets left="10.0" />
                </padding>
            </Label>
            <Button contentDisplay="GRAPHIC_ONLY" maxHeight="30.0" maxWidth="30.0" mnemonicParsing="false" onAction="#cancelAction" prefHeight="30.0" prefWidth="0.0" styleClass="icon-button">
                <graphic>
                    <FontIcon iconLiteral="gmi-close" />
                </graphic>
                <HBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </HBox.margin>
            </Button>
        </HBox>
        <VBox prefHeight="200.0" prefWidth="557.0" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
